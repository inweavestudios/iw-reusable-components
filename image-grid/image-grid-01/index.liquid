    font-weight: 400;
    line-height: 74px;
    margin-bottom: 40px;
    font-family: 'Perfectly Nineties';
    color: black;
  }

  .bento-block {
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    display: block;
    text-decoration: none;
    height: 100%;
  }

  .bento-block img {
    width: 100%;
    height: auto;
    object-fit: cover;
    /* transition: transform 0.3s ease; */
    display: block;
  }

  .bento-overlay {
    position: absolute;
    inset: 0;
    /* background: rgba(0, 0, 0, 0.4); */
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding: 24px;
  }

  .bento-overlay p {
    color: white;
    font-family: 'Perfectly Nineties';
    font-weight: normal;
    font-size: 28px;
    margin: 0;
    text-align: left;
    max-width: 215px;
  }

  .bento-grid {
    display: flex;
    justify-content: space-around;
    gap: 20px;
  }

  .first {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .second {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .third {
    display: flex;
  }

  .se-right {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .second-bottom {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .bottom1 img {
    max
    ht: 400px;
  }

  .bento-grid-section .container {
    max-width: 1280px;
  }

  @media screen and (min-width: 1750px) {
    .bento-grid-section .container {
      max-width: 1600px;
    }
    .top1 img {
      max-height: 506px;
    }
  }

  @media only screen and (max-width: 1422px) and (min-width: 768px) {
    .bento-overlay p {
      font-size: 18px;
    }

    .first,
    .second,
    .third,
    .se-right {
      gap: 15px;
    }
    .bento-grid.desktop-v {
      gap: 15px;
      display: none;
    }

    .bento-grid.tablet-v {
      display: block;
    }
  }

  @media screen and (min-width: 1423px) {
    .bento-grid.tablet-v {
      display: none;
    }
  }

  @media screen and (min-width: 768px) {
    .bento-grid.mobile-v {
      display: none;
    }
    .bento-grid-section {
      padding: 60px 20px 120px;
    }
  }

  @media screen and (max-width: 767px) {
    .bento-grid.tablet-v {
      display: none;
    }
    .bento-grid.desktop-v {
      display: none;
    }
    .bento-overlay p {
      color: white;
      font-family: 'Perfectly Nineties';
      font-weight: normal;
      font-size: 20px;
      max-width: 165px;
    }
    .bento-grid-section .heading {
      font-size: 32px;
      font-weight: 400;
      line-height: 34px;
      margin-bottom: 40px;
      font-family: 'Perfectly Nineties';
      color: black;
    }
    .mob-top {
      display: flex;
      gap: 10px;
    }
    .bento-grid-section .container {
      margin: 0;
    }
    .bento-grid {
      flex-direction: column;
    }
    .mob-bottom {
      display: flex;
      gap: 10px;
    }
    .mob-left {
      display: flex;
      gap: 10px;
      flex-direction: column;
      width: 50%;
    }
    .mob-right {
      display: flex;
      gap: 10px;
      flex-direction: column;
      width: 50%;
    }
    .mob-top2 img {
      max-height: 232px;
    }
    .bento-block {
      height: auto;
    }
    .mob-top1 {
      width: 50%;
    }
    .mob-top2 {
      width: 50%;
    }
    .mob-top1 img {
      max-height: 232px;
    }
  }
</style>

