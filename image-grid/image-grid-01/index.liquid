              {% endif %}
            </a>
          </div>
        </div>
        <div class="second-bottom">
          <div class="se-left">
            <div class="bento-block">
              <a href="{{ section.settings.link4 }}">
                <img src="{{ section.settings.image4 | image_url }}" alt="">
                {% if section.settings.text4 != blank %}
                  <div class="bento-overlay">
                    <p>{{ section.settings.text4 }}</p>
                  </div>
                {% endif %}
              </a>
            </div>
          </div>
          <div class="se-right">
            <div class="se-five">
