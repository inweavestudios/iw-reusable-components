              <img src="{{ section.settings.image7 | image_url }}" alt="">
              {% if section.settings.text7 != blank %}
                <div class="bento-overlay">
                  <p>{{ section.settings.text7 }}</p>
                </div>
              {% endif %}
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="bento-grid tablet-v">
      <a href="/collections/all-products"
        ><img src="https://cdn.shopify.com/s/files/1/0727/3742/3687/files/Group_10.png?v=1745600322"
      ></a>
    </div>
    <div class="bento-grid mobile-v">
