            <div class="s-info-blocks__faq-content">
              <div>
                <div>
                  {% for block in section.blocks %}
                    {% case block.type %}
                      {% when 'heading' %}
                        <h3 class="point-heading">{{ block.settings.title }}</h3>
                      {% when 'ingredient_points' %}
