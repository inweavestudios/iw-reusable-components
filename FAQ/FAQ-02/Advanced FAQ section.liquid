              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="feather feather-chevron-right"
              style="fill: none;stroke: currentColor;"
              role="presentation"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script>
  function toggleAccordion(event) {
    // Get the accordion group and all details elements
    const accordionGroup = document.getElementById('faq-accordion-group');
    const allDetails = accordionGroup.querySelectorAll('details');
    const clickedSummary = event.currentTarget;
    const clickedDetails = clickedSummary.parentElement;

    // Close all other accordions
    allDetails.forEach(details => {
      if (details !== clickedDetails) {
        details.removeAttribute('open');
      }
    });
  }

  document.addEventListener("DOMContentLoaded", function () {
    const toggleBtn = document.getElementById("toggle-ingredients");
    const toggleBtnArrow = document.querySelector("#toggle-ingredients .arrow-icon");
    const ingredientsSection = document.getElementById("ingredients-section");

    toggleBtn.addEventListener("click", function () {
      const isVisible = ingredientsSection.style.display === "block";
      ingredientsSection.style.display = isVisible ? "none" : "block";
      toggleBtnArrow.classList.toggle("rotate-arrow")
    });
  });
</script>

