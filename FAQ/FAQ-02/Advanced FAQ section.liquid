<div
  class="faq-section__wrapper"
  style="
    color: {{ section.settings.text_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="faq-section__container">
    <div class="faq-section__header">
      <h2 class="faq-section__heading">{{ section.settings.heading }}</h2>
      <div class="faq-section__description">{{ section.settings.description }}</div>
    </div>

    {% if section.settings.show_divider %}
      <hr class="faq-section__divider">
    {% endif %}

    <p class="faq-section__highlight">{{ section.settings.muscle_text }}</p>

    {% if section.blocks.size > 0 %}
      <div class="faq-section__blocks" id="faq-accordion-group">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'accordion' %}
              <div
                class="faq-section__accordion {% if forloop.last %}faq-section__accordion--last{% endif %}"
                {{ block.shopify_attributes }}
              >
                <details
                  class="faq-section__details"
                  {% if forloop.first %}
                    open
                  {% endif %}
                >
                  <summary class="faq-section__summary" onclick="toggleAccordion(event)">
                    <span class="faq-section__accordion-title">{{ block.settings.accordion_title }}</span>
                    <span class="faq-section__accordion-icon">
                      <svg
                        class="faq-section__accordion-svg faq-section__accordion-plus"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                      </svg>
                      <svg
                        class="faq-section__accordion-svg faq-section__accordion-minus"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                      </svg>
                    </span>
                  </summary>
                  <div class="faq-section__accordion-content">
                    <div class="faq-section__content">
                      {% if block.settings.herb_image %}
                        <div class="faq-section__image-wrapper">
                          <img
                            src="{{ block.settings.herb_image | img_url: 'master' }}"
                            alt="{{ block.settings.herb_title | escape }}"
                            class="faq-section__image"
                            loading="lazy"
                            width="430"
                            height="430"
                          >
                        </div>
                      {% endif %}

                      <div class="faq-section__text-content">
                        <h3 class="faq-section__subheading">{{ block.settings.herb_title }}</h3>
                        <div class="faq-section__text">{{ block.settings.herb_description }}</div>
                        <div class="faq-section__benefits">{{ block.settings.herb_benefits }}</div>
                        {% if block.settings.read_studies_url %}
                          <a
                            href="{{ block.settings.read_studies_url }}"
                            class="faq-section__link"
                            style="color: {{ block.settings.accent_color }};"
                          >
                            {{ block.settings.read_studies_text }}
                            <svg
                              class="faq-section__link-icon"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                            </svg>
                          </a>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </details>
              </div>

            {% when 'benefit' %}
              <div class="faq-section__benefit-block" {{ block.shopify_attributes }}>
                {% if block.settings.benefit_icon %}
                  <div class="faq-section__benefit-icon-wrapper">
                    <img
                      src="{{ block.settings.benefit_icon | img_url: '100x' }}"
                      alt="{{ block.settings.benefit_title | escape }}"
                      class="faq-section__benefit-icon"
                      loading="lazy"
                      width="100"
                      height="100"
                    >
                  </div>
                {% endif %}
                <h4 class="faq-section__benefit-title">{{ block.settings.benefit_title }}</h4>
                <div class="faq-section__benefit-description">{{ block.settings.benefit_description }}</div>
              </div>
            {% when 'ingredients' %}
              {% if section.settings.cta_url %}
                <div class="view-button-container">
                  <button id="toggle-ingredients" class="view-button">
                    VIEW THE FULL INGREDIENTS LIST
                    <span class="arrow-icon">‚ùØ</span>
                  </button>
                </div>
              {% endif %}
          {% endcase %}
        {% endfor %}
