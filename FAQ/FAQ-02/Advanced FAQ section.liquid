                            width="14"
                            height="14"
                            viewBox="0 0 14 14"
                            fill="none"
                          >
                            <circle cx="7.47363" cy="7.33203" r="6.5" fill="{{ block.settings.ball_color }}"></circle>
                          </svg>
                          <span class="text-point">{{ block.settings.content }}</span>
                        </div>
                    {% endcase %}
                  {% endfor %}
