        },
        {
          "type": "feature",
          "settings": {
            "title": "45-day Return Policy",
            "text": "Returns must be unused, undamaged, and in original packaging"
          }
        },
        {
          "type": "feature",
          "settings": {
            "title": "Fast & Secure Shipping",
            "text": "Fast & secure tent delivery"
          }
        }
      ]
    }
  ]
}
