    {
      "type": "checkbox",
      "id": "show_top_border",
      "label": "Show Top Border",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "top_border_image",
      "label": "Top Border Image"
    },
    {
      "type": "header",
      "content": "Title Settings"
    },
    {
      "type": "text",
