<section id="how-to-use-{{ section.id }}" class="how-to-use">
  <h3 class="title">{{ section.settings.section_title }}</h3>
  <div class="content">
    {% for block in section.blocks %}
      <div class="tile" {{ block.shopify_attributes }}>
        <div class="video-container">
          {% if block.settings.video_link != blank %}
            {% capture unique_class %}howto_video_{{ section.id }}_{{ forloop.index }}{% endcapture %}
            
            <!-- stored in snippet folder -->
            {% render 'video-element',  
              unique_class: unique_class,
              video_link: block.settings.video_link,
              video_poster: block.settings.video_poster
            %}
          {% endif %}
        </div>
        <p class="tile-title">{{ block.settings.title }}</p>
        <p class="tile-text">{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
  
  {% if section.settings.show_button %}
    <a class="shop-now" href="{{ section.settings.button_link }}">
      <button class="btn-height link-pointer">{{ section.settings.button_text }}</button>
    </a>
  {% endif %}
</section>

<style>
  .how-to-use {
    background: white;
    color: black;
    padding: 6rem 50px 4rem;
    display: flex;
    flex-flow: column;
    align-items: center;
  }
  .how-to-use .content {
    display: flex;
    gap: 4rem;
    margin-top: 5rem;
    justify-content: center;
    align-items: start;
  }
  .how-to-use .video-container {
    aspect-ratio: 3/4;
    max-width: 374px;
    border-radius: 10px;
    overflow: hidden;
  }
  .how-to-use .title {
    font-size: 40px;
  }
  .how-to-use .tile .tile-title {
    font-size: 20px;
    font-weight: 700;
    margin-top: 3rem;
  }
  .how-to-use .tile-text {
    font-size: 16px;
    text-align: center;
  }
  .how-to-use .tile {
    max-width: 385px;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
  }
  .how-to-use .shop-now {
    display: none;
    background: #020030;
    width: 100%;
    text-align: center;
    padding: 5px;
    border-radius: 7px;
    margin-top: 29px;
    max-width: 360px;
    color: white;
  }

  @media (max-width: 1182px) {
    .how-to-use .title {
      font-size: 32px;
    }
    .how-to-use .tile .tile-title {
      font-size: 16px;
    }
    .how-to-use .tile-text {
      font-size: 12px;
    }
  }
  @media (max-width: 999px) {
    .how-to-use .title {
      font-size: 26px;
    }
    .how-to-use .tile .tile-title {
      font-size: 14px;
    }
    .how-to-use .tile-text {
      font-size: 11px;
    }
  }
  @media (max-width: 768px) {
    .how-to-use .content {
      align-items: center;
      flex-flow: column;
      margin-top: 3rem;
    }
    .how-to-use .title {
      font-size: 32px;
    }
    .how-to-use .tile .tile-title {
      font-size: 18px;
      margin-top: 1.5rem;
    }
    .how-to-use .tile-text {
      font-size: 14px;
    }
    .how-to-use .shop-now {
      display: block;
    }
  }
  @media (max-width: 520px) {
    .how-to-use .title {
      font-size: 24px;
    }
    .how-to-use .shop-now {
      max-width: 353px;
    }
  }
  @media (max-width: 430px) {
    .how-to-use {
      padding: 4rem 25px;
    }
  }
</style>

