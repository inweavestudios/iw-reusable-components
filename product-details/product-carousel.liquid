    }
    @media (max-width:768px){
      .carousel-container {
        max-width: 100%;
      }
      .thumbnail {
        width: 58px;
      }
    }
  
  
  
  
  
.slick-prev:before,
.slick-next:before{
  content:"" !important;
}  
  .slick-arrow{
    text-align:center;
    z-index: 99;
  }
  .slick-arrow svg{
    padding:3px;
  }
    .slick-prev svg{
      padding:1px;
    }
    .parent-carousel-con{
      overflow-x:scroll;
    }
    .carousel-thumbnails {
    display: flex;
    justify-content: center;
    margin-top: 10px;
      width:max-content;
  }
  
 
  .thumbnail img {
    width: 100px;
    display: block;
    border: 2px solid transparent;
    border-radius: 8px;
    aspect-ratio: 2 / 2;
  }
  


    .slick-prev:hover, .slick-prev:focus, .slick-next:hover, .slick-next:focus {
}

    .slick-initialized .slick-slide {
    display: flex;
    justify-content: center;
}
    .slick-prev {
    left: -45px;
}
    .carousel.slick-initialized.slick-slider{
      margin:0 1rem;
    }
  
  </style>
  