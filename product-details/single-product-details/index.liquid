              <p>
                {{ block.settings.answer }}
              </p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style>
  #product-page-main .with-shoppay {
    display: flex;
    gap: 10px;
    align-items: center;
    margin-top: 10px;
  }
  #product-page-main {
    background: white;
    color: black;
  }
  .sections {
    min-height: 100vh;
    display: grid;
    gap: 40px;
    grid-template-columns: 45% 52%;
    padding: 5rem 8rem;
  }
  .section-1 {
  }
  .section-2 {
  }
  .product-title {
    color: black;
    font-weight: 700;
    font-size: 40px;
    line-height: 48px;
  }

  .star-rating {
    color: black;
    font-weight: 500;
    font-size: 16px;
    line-height: 14px;
    margin-top: 5px;
    display: flex;
    gap: 8px;
    align-items: center;
  }

  .benefits {
    display: flex;
    gap: 12px;
    margin-top: 26px;
  }
  .benefit {
    background: #020030;
    color: white;
    display: flex;
    gap: 6px;
    align-items: center;
    width: fit-content;
    padding: 4px 9px;
    font-size: 14px;
    border-radius: 22px;
  }
  .benefit .icon {
    height: 16px;
  }

  .features {
    background: #e7e7e7;
    border-radius: 8px;
    display: grid;
    grid-template-columns: 50% 50%;
    padding: 35px;
    margin-top: 4rem;
  }
  .feature {
    display: flex;
    gap: 10px;
    margin: 9px 0;
    font-weight: 600;
  }
  .feature .icon {
    width: 24px;
    height: 24px;
  }

  .product-selection {
    margin-top: 3rem;
  }
