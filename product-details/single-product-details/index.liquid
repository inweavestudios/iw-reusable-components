    font-size: 20px;
    font-weight: 700;
    text-transform: capitalize;
  }
  .selected span {
    font-size: 20px;
    font-weight: 500;
  }
  .products {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }
  .products .product {
    display: flex;
    flex-flow: column;
    align-items: center;
    width: 112px;
  }
  .products .product .img {
    width: 112px;
    height: 112px;
    background: #e4e4e4;
    border-radius: 5px;
  }
  .products .product p {
    text-align: center;
    font-size: 16px;
    margin-top: 10px;
  }
  .product .selected {
    border: 2px solid;
  }

  .price {
    font-size: 32px;
    font-weight: 700;
    margin-top: 4rem;
  }

  .add-to-cart {
    width: 100%;
    text-align: center;
    padding: 10px;
    background: #020030;
