<script>
  const ATCButton = document.querySelector('.product-form .add-to-cart');
  // adding products to cart
  document.getElementById('addToCartForm').addEventListener('submit', async function (event) {
    event.preventDefault();
    ATCButton.innerHTML = `<svg aria-hidden="true" focusable="false" role="presentation" style="width: 15px; height: 15px;" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                            <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                          </svg>`;
    try {
      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          id: event.target.id.value,
          quantity: 1,
        }),
      });

      if (!response.ok) {
        throw new Error('Failed to add product to cart');
      }
      document.dispatchEvent(new CustomEvent('ajaxProduct:added'));
    } catch (error) {
      console.error('Error adding to cart:', error);
    } finally {
      setTimeout(() => {
        ATCButton.innerHTML = `ADD TO CART`;
      }, 1000);
    }
  });

  const products = document.querySelectorAll('.products .product');
  const productsImgs = document.querySelectorAll('.products .product .img');
  const selected = document.querySelector('.selected span');
  const productTitle = document.querySelector('.product-title');
  const price = document.querySelector('.section-2 .price');
  const formID = document.querySelector('.product-form #id');
  const shoppayPrice = document.querySelector('.shoppay-amount');

  products.forEach((product) => {
    product.addEventListener('click', (e) => {
      if (selected.textContent == e.target.getAttribute('data-title')) return;
      changeProduct(e);
    });
  });

  const changeProduct = (e) => {
    const product = e.currentTarget;
    const title = product.getAttribute('data-title');
    price.textContent = product.getAttribute('data-price');
    productTitle.textContent = title;
    selected.textContent = title;

    productsImgs.forEach((img) => {
      img.classList.remove('selected');
    });

    product.querySelector('.img').classList.add('selected');

    formID.setAttribute('value', product.getAttribute('data-id'));

    if (!product.getAttribute('data-isavl') || product.getAttribute('data-isavl') == 'false') {
      ATCButton.classList.add('disabled');
      ATCButton.disabled = true;
      ATCButton.textContent = 'OUT OF STOCK';
    } else {
      ATCButton.classList.remove('disabled');
      ATCButton.disabled = false;
      ATCButton.textContent = 'ADD TO CART';
    }
    shoppayPrice.textContent = product.getAttribute('data-shoppay-price');

    // changing Url to match product
    history.pushState({}, '', `/products/${product.getAttribute('data-handle')}`);
  };

  const items = document.querySelectorAll('.info-accordion .accordion-title');
  items.forEach((item) => {
    item.addEventListener('click', function () {
      const itemSvgs = item.querySelectorAll('svg');

      document.querySelectorAll('.info-accordion .accordion-title svg').forEach((svg) => {
        if (itemSvgs[0] == svg || itemSvgs[1] == svg) {
          svg.classList.toggle('svg-visible');
        } else {
          if (svg.classList.contains('minus')) svg.classList.remove('svg-visible');
          if (svg.classList.contains('plus')) svg.classList.add('svg-visible');
        }
      });
      const content = this.nextElementSibling;
      const allContent = document.querySelectorAll('.info-accordion .accordion-content');
      allContent.forEach((c) => {
        if (c !== content) c.style.display = 'none';
      });
      content.style.display = content.style.display === 'block' ? 'none' : 'block';
    });
  });
</script>

