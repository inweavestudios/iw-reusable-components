      <div class="features">
        {% for block in section.blocks %}
          {% if block.type == 'feature_item' %}
            <p class="feature">
              {% if block.settings.icon %}
                <img class="icon" src="{{ block.settings.icon}}" alt="{{ block.settings.label }}">
              {% endif %}
              {{ block.settings.label }}
            </p>
          {% endif %}
        {% endfor %}
      </div>

      <div class="product-selection">
        <h3 class="selected">
          choose Tent: <span>{{ product.title }}</span>
        </h3>
        <div class="products">
          {% assign page_product = product %}
          {% assign index = 1 %}
          {% for product in collections.all.products %}
            {% if product.metafields.custom.product_page_product %}
              <div
                class="product link-pointer"
                data-handle="{{ product.handle }}"
                data-product="{{ index }}"
                data-shoppay-price="{{ product.metafields.custom.shop_pay_emi_pricing.value | money_with_currency }}"
                data-isavl="{{ product.variants.first.available }}"
                data-title="{{ product.title }}"
                data-price="{{ product.price | money_with_currency }}"
                data-id="{{ product.variants.first.id }}"
              >
                <div class="img {% if page_product.title == product.title %}selected {% endif %}">
                  <img width="500" src="{{ product.images.first | img_url}}">
                </div>
                <p>{{ product.title }}</p>
              </div>
              {% assign index = index | plus: 1 %}
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <h2 class="price">
        {{ product.price | money_with_currency }}
      </h2>

