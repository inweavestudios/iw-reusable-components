      <form class="product-form" id="addToCartForm">
        <input id="id" type="hidden" name="id" value="{{ product.variants.first.id }}">
        <input type="hidden" name="quantity" id="quantity" value="1" min="1">
        <button
          class="product-form__submit add-to-cart link-pointer {% if product.variants.first.available %}{% else %} disabled{% endif %}"
          type="submit"
          {% if product.variants.first.available %}
          {% else %}
            disabled
          {% endif %}
        >
          {% if product.variants.first.available %}ADD TO CART{% else %} OUT OF STOCK{% endif %}
        </button>
      </form>

      <div class="bottom-icons-texts">
        {% assign bottom_titles = 'Lifetime Airframe Warranty,,45-day Return Policy,,Fast & Secure Shipping'
          | split: ',,'
        %}
        {% assign bottom_texts = 'High-quality materials for long-term durability and sustainable circular economy,,Returns must be unused, undamaged, and in original packaging,,Fast & secure tent delivery'
          | split: ',,'
        %}
        {% for title in bottom_titles %}
          <div class="bottom-icon-text-item">
            <div class="img-container ">
              <img
                src="{% if forloop.index0 == 0 %} https://cdn.shopify.com/s/files/1/0673/6681/3924/files/iconamoon_delivery-fast-fill_1.png?v=1740054799 {% elsif forloop.index0 == 1 %} https://cdn.shopify.com/s/files/1/0673/6681/3924/files/iconamoon_delivery-fast-fill.png?v=1740054798 {% else %} https://cdn.shopify.com/s/files/1/0673/6681/3924/files/iconamoon_delivery-fast-fill_c5fd61e4-068a-4a13-85c9-482c57885ec5.png?v=1740054798 {% endif %}"
                alt=""
                class="icon-img {% if forloop.last %} small-icon{% endif %}"
              >
            </div>
            <p class="bottom-title">{{ title }}</p>
            <p class="bottom-text">{{ bottom_texts[forloop.index0] }}</p>
          </div>
        {% endfor %}
      </div>

      <div class="info-accordion">
        {% for block in section.blocks %}
          <div class="accordion-item">
            <button class="accordion-title">
              {{ block.settings.question }}
              <svg
                class="minus"
                width="13"
                height="2"
                viewBox="0 0 13 2"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
              >
