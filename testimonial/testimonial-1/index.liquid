 {% endcomment %}


<section id="recommended">
  <div class="inner-content">
    <img src="{{ section.settings.star }}" class="stars">
    {% if section.settings.title %}
      <h3 class="title">{{ section.settings.title }}</h3>
      {% endif %}
      {% if section.settings.description %}
         <p class="content">{{ section.settings.description }}</p>
      {% endif %}
      {% if section.settings.author %}
         <p class="by">â€” {{ section.settings.author }}</p>
      {% endif %}
  </div>
  <img src="{{ section.settings.bottom }}" class="bottom-border" />
</section>




<style>
  #recommended{
    background: white;
  }
  .inner-content{
    background: #020030;
    display: flex;
    flex-flow: column;
    justify-content: center;
    align-items: center;
    padding: 6rem 50px 4rem;
  }
  .stars{
    width:124px;
  }
  #recommended .title{
    font-size: 40px;
    font-weight: 700;
    margin-top: 2.5rem;
    text-align: center;
  }
  #recommended .content b{
    font-weight:700;
  }
  .mobile-break{
    display:none;
  }
  .content,.by{
    font-size: 18px;
    font-weight: 400;
    margin-top: 2.5rem;
    text-align: center;
  }
  .bottom-border{
    transform: translateY(-1px);
  }


  @media (max-width:1600px){
    #recommended .title{
      font-size: 34px;
      margin-top: 2rem;
    }
  }
  @media (max-width:1370px){
    #recommended .title{
      font-size: 28px;
    }
  }
  @media (max-width:1300px){
    .stars{
      width:98px;
    }
  }
  @media (max-width:1148px){
    #recommended .title{
      font-size: 24px;
    }
  }
  @media (max-width:998px){
    .stars{
      width:68px;
    }
    #recommended .title{
      font-size: 20px;
    }
    .content, .by {
      font-size: 16px;
    }
  }
  @media (max-width:694px){
    .mobile-break{
      display:block;
    }
    .inner-content{
      padding: 3rem 50px;
    }
  }
  @media (max-width:482px){
    .inner-content {
      padding: 3rem 25px;
    }
    #recommended .title{
      font-size: 16px;
    }

    .stars {
      width: 87px;
    }
  }


  
</style>


{% schema %}
  {
    "name": "Recommended",
    "settings": [
      {
        "type": "text",
        "id": "star",
        "label": "star Icon Url"
      },
      {
        "type": "richtext",
        "id": "title",
        "label": "Section Title",
        "default": "<h3>Recommended for You</h3>"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "<p>This is a recommended section description.</p>"
      },
      {
        "type": "text",
        "id": "author",
        "label": "Author",
        "default": "<p>Emily</p>"
      },
      {
        "type": "text",
        "id": "bottom",
        "label": "Bottom svg",
      }
    ],
    "presets": [{
      "name": "Recommended"
    }]
  }
{% endschema %}