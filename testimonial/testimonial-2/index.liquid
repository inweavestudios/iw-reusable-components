        },
        {
          "type": "text",
          "id": "author",
          "label": "Customer Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials Section IW",
      "blocks": [
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
