<section id="Testimonial-Section">
  <div class="container testimonial-container">
    <div class="testimonial-title">
      <h1>
        {{ section.settings.title }}
        <p>{{ section.settings.subtitle }}</p>
      </h1>
    </div>

    <div class="testimonial-card-container slickslider">
      {% for block in section.blocks %}
        <div class="testimonial-card">
          <img src="{{ section.settings.pushpin_icon | img_url: 'small' }}" class="pushpin">
          {% if block.settings.customer_image %}
            <img src="{{ block.settings.customer_image | img_url: 'medium' }}" class="testimonial-img">
          {% endif %}
          <img src="{{ section.settings.star_icon | img_url: 'small' }}" class="stars">
          {% if block.settings.testimonial_text %}
            <p>{{ block.settings.testimonial_text }}</p>
          {% endif %}
          {% if block.settings.testimonial_text_2 %}
            <p>{{ block.settings.testimonial_text_2 }}</p>
          {% endif %}
          {% if block.settings.testimonial_text_3 %}
            <p>{{ block.settings.testimonial_text_3 }}</p>
          {% endif %}
          {% if block.settings.testimonial_text_4 %}
            <p>{{ block.settings.testimonial_text_4 }}</p>
          {% endif %}
          <p class="customer-name">{{ block.settings.customer_name }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="testimonial-carousel-controls">
      <button class="prev-slick-slide">
        <img src="{{ section.settings.prev_arrow | img_url: 'small' }}" class="testimonial-arrow-btn">
      </button>
      <button class="next-slick-slide">
        <img src="{{ section.settings.next_arrow | img_url: 'small' }}" class="testimonial-arrow-btn">
      </button>
    </div>
  </div>
</section>

<style>
