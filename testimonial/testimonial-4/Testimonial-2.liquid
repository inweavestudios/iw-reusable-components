</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
   jQuery('.slickslider').slick({
    slidesToShow: 3,  // Adjust this based on your layout
    slidesToScroll: 1,
    infinite: false,  // Disables infinite scrolling
    arrows: true,
    prevArrow: jQuery('.prev-slick-slide'),
    nextArrow: jQuery('.next-slick-slide'),
    centerMode: false, // Avoids extra margin issues
    variableWidth: true,
    responsive: [
      {
        breakpoint: 1024,
        settings: { slidesToShow: 2 }
      },
      {
        breakpoint: 768,
        settings: { slidesToShow: 1 }
      }
    ]
  });

    });
</script>

