{%- if section.settings.icon == 'stars' -%}
  {{ 'component-rating.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- liquid
  assign ipr_desktop = section.settings.items_per_row_desktop
  assign ipr_tablet = section.settings.items_per_row_tablet
  assign ipr_mobile = 1
  assign slider_mobile = true
  assign slider_desktop = true
  assign header_block = section.blocks | where: 'type', 'section_header' | first
  assign testimonial_blocks = section.blocks | where: 'type', 'testimonial'
  assign slider_items_count = testimonial_blocks | size
-%}

<div
  id="{{ section.id }}"
  class="testimonials container {% if section.settings.enable_full_width %}full-width{% endif %} sm-down-edge-to-edge pt pb sm-pt sm-pb color-{{ section.settings.color_scheme }}"
  style="
    --pt: {{ section.settings.padding_top | append: 'px' }};
    --pb: {{ section.settings.padding_bottom | append: 'px' }};
    --sm-pt: {{ section.settings.md_padding_top | append: 'px' }};
    --sm-pb: {{ section.settings.md_padding_bottom | append: 'px' }};
  "
>
  {%- if header_block != blank -%}
    {% render 'section-header',
      size_multiplier: header_block.settings.size_multiplier,
      sm_size_multiplier: header_block.settings.sm_size_multiplier,
      text_align: header_block.settings.text_alignment,
      subtitle: header_block.settings.subtitle,
      subtitle_tag: header_block.settings.subtitle_tag,
      title: header_block.settings.title,
      title_tag: header_block.settings.title_tag,
      text: header_block.settings.text
    %}
  {%- endif -%}

  {%- if testimonial_blocks.size > 0 -%}
    <gridy-slider
      id="slider-{{ section.id }}"
      class="gridy-slider mt-24"
      data-mobile-enabled="{{ slider_mobile }}"
      data-tablet-enabled="{{ slider_desktop }}"
      data-desktop-enabled="{{ slider_desktop }}"
      data-ipr-mobile="{{ ipr_mobile }}"
      data-ipr-tablet="{{ ipr_tablet }}"
      data-ipr-desktop="{{ ipr_desktop }}"
      data-arrows="true"
      data-autoplay="{{ section.settings.autoplay}}"
      data-autoplay-delay="{{ section.settings.autoplay_speed | times: 1000 }}"
    >
      <div class="gridy-track scrollbar--hide track-inner-padding grid grid-cols-{{ ipr_mobile }} sm-grid-cols-{{ ipr_tablet }} md-grid-cols-{{ ipr_desktop }}">
        {% for block in testimonial_blocks %}
          {% capture card_content %}
          {%- if section.settings.icon == 'stars' -%}
            {% render 'product-rating', five_star_rating: true, custom_classes: 'mb-16' %}
          {% elsif section.settings.icon == 'quotation_mark' %}
            <div class="quotation-mark h2 size--outrageous"><em>“</em></div>
          {%- endif -%}
            
          {%- if block.settings.title != blank -%}
            <h3 class="tile-title h3 mb-16">{{ block.settings.title }}</h3>
          {%- endif -%}

          {%- if block.settings.testimonial != blank -%}
            <div class="tile-des rte mb-16 size--default sm-size--large">{{ block.settings.testimonial }}</div>
          {%- endif -%}

          {%- if block.settings.author != blank -%}
            <cite class="tile-author size--small style--subdued">— {{ block.settings.author | escape }}</cite>
          {%- endif -%}
        {% endcapture %}

          {% render 'card-testimonial',
            card_content: card_content,
            card_bg: 'bg-transparent',
            text_align: section.settings.alignment
          %}
        {% endfor %}
      </div>
      {%- liquid
        # Class for positioning
        assign arrows_class = 'sm-on-edge'

        # Class to hide if all in view
        if slider_items_count <= ipr_desktop
          assign arrows_class = arrows_class | append: ' md-hide'
        endif
        if slider_items_count <= ipr_tablet
          assign arrows_class = arrows_class | append: ' sm-to-md-hide'
        endif
        if slider_items_count <= ipr_mobile
          assign arrows_class = arrows_class | append: ' sm-down-hide'
        endif
      -%}

      <div class="gridy-arrows flex space-between {{ arrows_class }}">
        <button class="btn btn--primary btn--with-icon btn--round gridy-arrow flex" type="button" data-gridy-arrow data-direction="prev">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="40" height="40" rx="20" fill="#001F5C"></rect>
            <path d="M25.3337 19.3337H17.2203L20.947 15.607L20.0003 14.667L14.667 20.0003L20.0003 25.3337L20.9403 24.3937L17.2203 20.667H25.3337V19.3337Z" fill="white"></path>
          </svg>
          <span class="visually-hidden">{{ 'general.slider.previous_slide' | t }}</span></button>
        <button class="btn btn--primary btn--with-icon btn--round gridy-arrow flex" type="button" data-gridy-arrow data-direction="next">
          <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect width="40" height="40" rx="20" fill="#001F5C"></rect>
            <path d="M19.9997 13.3311L18.8247 14.5061L23.4747 19.1644H13.333V20.8311H23.4747L18.8247 25.4894L19.9997 26.6644L26.6663 19.9977L19.9997 13.3311Z" fill="white"></path>
          </svg>
          <span class="visually-hidden">{{ 'general.slider.next_slide' | t }}</span></button>
      </div>
    </gridy-slider>
  <a href="#product-page-main" style="margin: 0 auto;"><button class="shop-now link-pointer btn-height">Shop Now</button></a>
  {%- endif -%}
</div>

<style>
  .testimonials.container{
    background:white;
    color: black;
  }
  .testimonials .shop-now{
    background: #020030;
    color: white;
    font-size: 18px;
    letter-spacing: 1px;
    width: 410px;
    text-align: center;
    border-radius: 6px;
    padding: 7px;
    margin-left: auto;
    margin-right: auto;
    margin-top: 2rem;
  }
  .testimonials .title{
    max-width:100%;
  }
  .testimonials .title h3{
    font-size:40px;
  }
  .testimonials .tile-title{
    font-size:24px;
    letter-spacing: 3.9px;
  }
  .testimonials .tile-des p{
    font-size:20px;
    letter-spacing: 1.35px;
  }
  .testimonials .tile-author{
    font-size:16px;
    opacity: 1;
    font-weight: 500;
  }
  .testimonials .gridy-arrows {
    width: 94%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: none !important;
  }
  .testimonials .gridy-arrows .btn{
    background-color: transparent;
  }
  .testimonials .gridy-arrows .btn:is(.btn--primary,.shopify-payment-button__button--unbranded):not([disabled]):not(.disabled):hover {
    box-shadow: none;
  }
  .testimonials .tile-author {
    font-weight: 700;
  }
  .testimonials .card-body {
    padding: 28px;
  }

  @media (max-width:1326px){
    .testimonials .title h3{
      font-size:36px;
    }
    .testimonials .tile-title{
      font-size:20px;
    }
    .testimonials .tile-des p{
      font-size:16px;
    }
    .testimonials .tile-author{
      font-size:14px;
    }
    .testimonials .rating-star{
      font-size:18px;
    }
  }
  @media (min-width:768px){
    .gridy-slider .gridy-arrows {
      opacity: 1 !important;
      transform: translate(-50%, -50%) scale(1.0) !important;
    }
    .gridy-slider:hover .gridy-arrows {
      transform: translate(-50%, -50%) scale(1.0) !important;
    }
    .testimonials .gridy-arrows {
      width: 100%;
    }

  }
  @media (max-width:768px){
    .testimonials .title h3{
      font-size:24px;
    }
    .testimonials .tile-title{
      font-size:18px;
    }
    .testimonials .tile-des p{
      font-size:16px;
      width: 92%;
      margin: 0 auto;
    }
    .testimonials .rating-star{
      font-size:16px;
    }
    .testimonials .shop-now{
      display:none;
    }
     .testimonials .title {
      margin-top: 1rem;
      margin-bottom: -24px;
    }
    .testimonials{
      padding-bottom:0 !important;
    }
    .testimonials .card-body {
      padding: 24px;
    }
  }
  @media (max-width:468px){
    .testimonials .title h3 {
      max-width: 68%;
      margin: 0 auto;
    }
  }
  @media (max-width:423px){
    .testimonials .title {
      padding:0;
    }
    .testimonials gridy-slider {
      width:100vw;
    }
  }
</style>

